                android:layout_height="100dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="100dp"
